<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.espol.insucontrol.LoginActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="40dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/correo"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/txtUser"
                android:layout_alignStart="@+id/txtUser" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtUser"
                android:layout_below="@+id/textView"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:layout_alignRight="@+id/btnLogin"
                android:layout_alignEnd="@+id/btnLogin"
                android:layout_alignLeft="@+id/btnLogin"
                android:layout_alignStart="@+id/btnLogin"
                android:hint="@string/correo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pass"
                android:id="@+id/textView2"
                android:layout_below="@+id/txtUser"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/txtUser"
                android:layout_alignStart="@+id/txtUser"
                android:layout_marginTop="20dp"/>

            <EditText
                android:hint="@string/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/txtPass"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_below="@id/textView2"
                android:layout_alignRight="@+id/txtUser"
                android:layout_alignEnd="@+id/txtUser"
                android:layout_alignLeft="@+id/txtUser"
                android:layout_alignStart="@+id/txtUser"
                android:layout_marginBottom="15dp"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comenzar"
                android:id="@+id/btnLogin"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_below="@+id/txtPass"
                android:layout_centerHorizontal="true" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/registro"
                android:id="@+id/btnRegistro"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorButton"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnLogin"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
