<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/nombreAlimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/infoAlimentos"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PorcionTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nombreAlimento"
            android:layout_marginTop="11dp"
            android:text="@string/porcionTt"
            android:layout_marginBottom="15dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/cantidadPorciones"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="1"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_below="@+id/PorcionTitulo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/porcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cantidadPorciones"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/cantidadPorciones" />

        <TextView
            android:id="@+id/NumCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cantidadPorciones"
            android:layout_marginTop="16dp"
            android:text="Total Carbohidratos"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/numeroCh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/NumCh"
            android:layout_alignBottom="@+id/NumCh"
            android:layout_toRightOf="@+id/NumCh" />

        <TextView
            android:id="@+id/lblGr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gr."
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/numeroCh"
            android:layout_alignBottom="@+id/numeroCh"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/numeroCh"
            android:layout_toEndOf="@+id/numeroCh" />
    </RelativeLayout>
</ScrollView>